<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDog"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Dog"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintRight_toLeftOf="@+id/btnCat"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/btnCat"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Cat"
        app:layout_constraintLeft_toRightOf="@id/btnDog"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnTiger"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Tiger"
        app:layout_constraintRight_toLeftOf="@+id/btnCat"
        app:layout_constraintTop_toBottomOf="@+id/btnDog"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/btnLion"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Lion"
        app:layout_constraintTop_toBottomOf="@id/btnCat"
        app:layout_constraintLeft_toRightOf="@+id/btnTiger"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>